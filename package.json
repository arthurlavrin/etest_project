{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Capstone Project Template ",
  "repository": {
    "type": "git",
    "url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass-compile": "sass src/scss/main.scss dist/css/style.css",
    "sass-watch": "sass --watch src/scss:dist/css",
    "lint:js": "eslint src/js/**/*.js",
    "lint:css": "stylelint \"src/scss/**/*.scss\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix:js": "eslint src/js/**/*.js --fix",
    "lint:fix:css": "stylelint \"src/scss/**/*.scss\" --fix",
    "lint:fix": "npm run lint:fix:js && npm run lint:fix:css"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "sass": "^1.93.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0"
  }
}
